<%- include("partials/header"); -%>
<%- include("partials/navigation-" + role); -%>

<h1 class="pb-4">All books</h1>

<div class="container p-3 my-3">
    <div class="row">
        <% books.forEach(function(book, index){ %>
                <div class="col-sm-4">
                    <a href="/book-info?bookId=<%= book._id %>" class="col text-left text-dark">
                        <div class="pt-1">Title: <%= book.title %></div>
                        <div class="pt-1">Author: <%= book.author %></div>
                        <div class="pt-1">Available? <% if(book.isReturned === true){%> yes <%}else{ %> no <% } %></div>
                    </a>
                </div>
        <% }); %>

    </div>
</div>



<%- include("partials/footer"); -%>