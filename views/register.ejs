<%- include("partials/header"); -%>

<div class="jumbotron jumbotron2 mb-0">
    <div class="dark-container p-5 mt-5">

        <h2 class="text-center text-light display-4 font-weight-bold">Register</h2>

        <form action="/register" method="post">
            <div class="text-center ml-auto mr-auto w-75">
                <h6 class="error"><%=error%></h6>
                <div class="pt-4 row form-group text-left">
                    <div class="col-6">
                        <h5>First Name</h5>
                        <input class="form-control" name="firstName" placeholder="first" type="text" />
                    </div>
                    <div class="col-6">
                        <h5>Last Name</h5>
                        <input class="form-control" name="lastName" placeholder="last" type="text" />
                    </div>
                </div>
                <div class="pt-4 form-group text-left">
                    <h5>Telegram</h5>
                    <input class="form-control" name="telegram" placeholder="telegram" type="text" />
                </div>
                <div class="pt-4 form-group text-left">
                    <h5>Username</h5>
                    <input class="form-control" name="username" placeholder="username" type="text" />
                </div>
                <div class="pt-4 form-group text-left">
                    <h5>Password</h5>
                    <input class="form-control" name="password" placeholder="password" type="text" />
                </div>
                <div class="pt-4 form-group">
                    <button class="btn btn-lg btn-outline-light" type="submit">Submit</button>
                </div>
                <div class="form-group">
                    <a href="sign-in">Already have an account? Sign in.</a>
                </div>
            </div>
        </form>

    </div>
</div>

<%- include("partials/footer"); -%>